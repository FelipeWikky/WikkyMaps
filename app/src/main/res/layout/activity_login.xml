<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/PersonWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Act.LoginActivity">

    <ImageView
        android:layout_marginTop="20dp"
        android:src="@drawable/avatarone"
        android:id="@+id/imgLogin"
        android:layout_width="match_parent"
        android:layout_height="150sp" />

    <EditText
        android:background="@drawable/border_rounded_silver"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/edtEmail"
        android:hint="E-Mail"
        android:textSize="20dp"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/colorPrimary">
        <EditText
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/border_rounded_silver"
            android:id="@+id/edtSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Senha"
            android:textSize="20dp"
            android:inputType="textPassword"
            />
    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/chkLembrarSenha"
        android:text="Lembrar E-Mail e Senha"
        android:textSize="15sp"
        android:checked="false"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/chkMostrarSenha"
        android:text="Mostrar Senha?"
        android:checked="false"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Button
        android:id="@+id/btnFazerLogin"
        android:text="ENTRAR"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:background="@drawable/border_button_basic"
        android:textColor="@color/ForestGreen"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_width="330dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtCadastroUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NÃ£o tem Cadastro? Clique Aqui"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        />

</LinearLayout>